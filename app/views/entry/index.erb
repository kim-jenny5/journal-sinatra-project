<div id="entry_index_h1">
  <h1><%= @user.name %>'s Entries</h1>
</div>
<span class="back_button">
  <p><a href="/<%= @user.username %>">&laquo; Back to Main Page</a></p>
</span>
<% if @entries.empty? %>
  <div id="no_entries">No entries yet. Create your first entry today! </div>
<% else %>
  <table>
    <thead>
      <tr>
        <th>No.</th>
        <th>Date</th>
        <th>Title</th>
      </tr>
    </thead>
    <% @entries.each.with_index(1) do |entry, index| %>
      <tbody>
        <tr>
          <td><a href="/<%= current_user.username %>/entries/<%= entry.id %>"><strong><em><%= index %></em></strong></a></td>
          <td><a href="/<%= current_user.username %>/entries/<%= entry.id %>"><%= entry.date %></a></td>
          <td><a href="/<%= current_user.username %>/entries/<%= entry.id %>"><%= entry.title %></a></td>
        </tr>
      </tbody>
    <% end %>
  <% end %>
</table>
<div class="break_space"></div>
<span id="new_entry_button"><a href="/<%= current_user.username %>/entries/new">New Entry</a></span>
<span class="logout_button">
<form action="/logout" method="POST">
    <input type="submit" value="Log Out">
</form>
</span>
