<p><%= @entry.gratitude %></p>
<br>

<form action="/<%= current_user.username %>/entries/<%= @entry.id %>/edit">
    <p><input type="submit" value="Edit"></p>
</form>

<form action="/<%= current_user.username %>/entries">
    <p><input type="submit" value="Go back to all entries"></p>
</form>

<form action="/<%= current_user.username %>/entries/<%= @entry.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="DELETE">
    <p><input type="submit" value="Delete this entry"></p>
</form>

