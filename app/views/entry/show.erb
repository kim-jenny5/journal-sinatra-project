<h1><%= @entry.date %></h1>
<% if !@entry.title.blank? %>
    <h3><%= @entry.title %></h3>
<% end %>
<p><%= @entry.the_entry %></p>
<h3><label id="show_mood">Mood: </label>
<%= @entry.mood %></h3>z
<h3><label id="show_food">What I ate today</label></h3>
<p><%= @entry.food %></p>
<h3><label id="show_gratitude">I was grateful for...</label></h3>
<p><%= @entry.gratitude %></p>
<br>

<form action="/<%= current_user.username %>/entries/<%= @entry.id %>/edit">
    <p><input type="submit" value="Edit"></p>
</form>

<form action="/<%= current_user.username %>/entries">
    <p><input type="submit" value="Go back to all entries"></p>
</form>

